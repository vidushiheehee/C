#include<stdio.h>
int a,b;
main()
{
	printf("Enter two numbers: ");
	scanf("%d%d",&a,&b);
	int LCM(int);
	if(a==0||b==0)
		printf("The LCM of %d and %d is 0.",a,b);
	else if(a==b)
		printf("The LCM of %d and %d is %d.",a,b,a);
	else
		printf("The LCM of %d and %d is %d.",a,b,LCM(a>b?a:b));
	return 0;
}
int LCM(int m)
{
	if(m%a==0&&m%b==0)
		return m;
	else
		return LCM(++m);
}
