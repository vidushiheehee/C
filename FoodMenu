#include<stdio.h>
int main()
{
	printf("Menu:\n1. Pizza, Rs 239\n2. Burger, Rs 129\n3. Pasta, Rs 179\n4. French Fries, Rs 99\n5. Sandwich, Rs 149\n");
  printf("Select what to eat by entering any number between 1 and 5: ");
	int x;
	scanf("%d",&x);
	switch(x)
	{
		case 1:
			printf("Food item - Pizza\nPrice - Rs 239");
			break;
		case 2:
			printf("Food item - Burger\nPrice - Rs 129");
			break;
		case 3:
			printf("Food item - Pasta\nPrice - Rs 179");
			break;
		case 4:
			printf("Food item - French Fries\nPrice - Rs 99");
			break;
		case 5:
			printf("Food item - Sandwich\nPrice - Rs 149");
			break;
		default:
			printf("Invalid Input");
	}
	return 0;
}
